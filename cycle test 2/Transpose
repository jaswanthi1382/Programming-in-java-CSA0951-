import java.util.Scanner;
public class test2 {
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        System.out.print("enter the no.of rows and columns: ");
        int r=sc.nextInt();
        int c=sc.nextInt();
        int[][] matA=new int[r][c];
        System.out.print("enter elements: ");
        for(int i=0;i<r;i++){
            for(int j=0;j<c;j++){
                matA[i][j]=sc.nextInt();
            }
        }
        System.out.print("Original matrix: \n ");
        for(int i=0;i<r;i++){
            for(int j=0;j<c;j++){
                System.out.print(matA[i][j]+"\t");
            }
            System.out.println();
        }
        System.out.print("Transposed matrix: \n ");
        for(int i=0;i<c;i++){
            for(int j=0;j<r;j++){
                System.out.print(matA[j][i]+"\t");
            }
            System.out.println();
        }



    }
}

